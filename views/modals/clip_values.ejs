<div class="modal fade dataprocessing" id="clip_values" tabindex="-1" role="dialog" aria-labelledby="drop_col" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="">Clip values</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% if(list.numerical != "empty") {%>
            <div class="modal-body">
                <form action="/clip_values" method="POST">
                    <div class="form-group">
                        <label for="col">Select the column:</label>
                            <select name="col" class="custom-select form-control" id="col">
                                <% list.numerical.forEach(function(num) { %>
                                <option value="<%=num%>"><%=num%></option>
                                <% }) %>
                            </select>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label" for="minthresh">Minimum threshold</label>
                        <div class="col-sm-6">
                            <input class="form-control" type="number" name="minthresh" id="minthresh" />
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-6 col-form-label" for="minthresh">Maximum threshold</label>
                        <div class="col-sm-6">
                            <input class="form-control" type="number" name="maxthresh" id="minthresh" />
                        </div>
                    </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-lg">Submit</button>
        </div>
            
        </form>
            <% }else{ %>
            <div class="modal-body">
                <div class="jumbotron">
                    <h1 class="display-4">Opps!!!</h1>
                    <p class="lead">You don't have any columns</p>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>